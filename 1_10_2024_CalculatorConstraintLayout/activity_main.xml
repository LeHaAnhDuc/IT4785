<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <TextView
        android:id="@+id/result"
        android:layout_width="406dp"
        android:layout_height="274dp"
        android:layout_margin="13dp"
        android:background="#e1e1e1"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@id/button_CE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:cornerRadius="1dp"
        android:text="CE"
        android:textColor="@color/black"
        android:id="@+id/button_CE"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        android:layout_marginLeft="4dp"
        />
    <Button
        android:id="@+id/button_C"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_CE"
        app:layout_constraintTop_toTopOf="@id/button_CE" />
    <Button
        android:id="@+id/button_BS"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="BS"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_C"
        app:layout_constraintTop_toTopOf="@id/button_C" />
    <Button
        android:id="@+id/button_Divide"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_BS"
        app:layout_constraintTop_toTopOf="@id/button_BS" />

    <Button
        android:id="@+id/button_7"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_4"/>
    <Button
        android:id="@+id/button_8"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_7"
        app:layout_constraintTop_toTopOf="@id/button_7" />
    <Button
        android:id="@+id/button_9"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_8"
        app:layout_constraintTop_toTopOf="@id/button_8" />
    <Button
        android:id="@+id/button_Multiply"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_9"
        app:layout_constraintTop_toTopOf="@id/button_9" />

    <Button
        android:id="@+id/button_4"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_1"/>
    <Button
        android:id="@+id/button_5"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_4"
        app:layout_constraintTop_toTopOf="@id/button_4" />
    <Button
        android:id="@+id/button_6"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_5"
        app:layout_constraintTop_toTopOf="@id/button_5" />
    <Button
        android:id="@+id/button_Minus"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_6"
        app:layout_constraintTop_toTopOf="@id/button_6" />

    <Button
        android:id="@+id/button_1"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_PDM"/>
    <Button
        android:id="@+id/button_2"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_1"
        app:layout_constraintTop_toTopOf="@id/button_1" />
    <Button
        android:id="@+id/button_3"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_2"
        app:layout_constraintTop_toTopOf="@id/button_2" />
    <Button
        android:id="@+id/button_Plus"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_3"
        app:layout_constraintTop_toTopOf="@id/button_3" />

    <Button
        android:id="@+id/button_PDM"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="+/-"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/button_0"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#efefef"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_PDM"
        app:layout_constraintTop_toTopOf="@id/button_PDM" />
    <Button
        android:id="@+id/button_Dot"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="."
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_0"
        app:layout_constraintTop_toTopOf="@id/button_0" />
    <Button
        android:id="@+id/button_Equal"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:backgroundTint="#dedede"
        android:text="="
        android:textColor="@color/black"
        android:textSize="32dp"
        app:cornerRadius="1dp"
        app:layout_constraintLeft_toRightOf="@id/button_Dot"
        app:layout_constraintTop_toTopOf="@id/button_Dot" />

</androidx.constraintlayout.widget.ConstraintLayout>